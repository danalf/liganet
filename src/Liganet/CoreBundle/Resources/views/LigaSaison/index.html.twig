{% extends '::base.html.twig' %}
{% block content %}

<div class="row">
    <div class="col-md-11">
        <div class="page-header">
            <h1>Zuordnung Liga und Saison</h1>
        </div>
    </div>
    <div class="col-md-1">
        {% if is_granted('ROLE_LEAGUE_MANAGEMENT') %}
        <a class="btn btn-default" href="{{ path('ligasaison_new', { 'liga_id': 0 }) }}">
            <i class="fa fa-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>

<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>Saison</th>
            <th>Liga</th>
            <th>Gesperrt</th>
            <th>Aktuell</th>
            <th>Bemerkung</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
            {% for entity in entities %}
            <tr>
                <td>{{ entity.saison.saison }}</a></td>
                <td>{{ entity.liga.name }}</a></td>
                <td>
                    {% if entity.gesperrt > 0 %}
                    <i class="icon-ok"></i>
                    {% endif %}
                </td>
                <td>
                    {% if entity.actual > 0 %}
                    <i class="icon-ok"></i>
                    {% endif %}
                </td>
                <td>{{ entity.bemerkung }}</td>
                <td>
                        <a class="btn btn-default" href="{{ path('ligasaison_show', { 'id': entity.id }) }}">
                            <i class="fa fa-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn btn-default" href="{{ path('ligasaison_edit', { 'id': entity.id }) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

{% endblock %}
