<h2>Saisons
{% if isGrantedEdit == true %}
        <a style="float: right" class="btn" href="{{ path('ligasaison_new', { 'liga_id': liga.id }) }}">
            <i class="icon-plus"></i>
        </a>
{% endif %}  
    </h2>
    <table class="table">
        <tbody>
        {% for ligasaison in liga.ligasaison %}
                <tr>
                    <td style="background-color: {{ ligasaison.liga.farbeTabellenKopf }}; color: {{ ligasaison.liga.farbeTabellenKopfSchrift }};">{{ ligasaison.liga.kuerzel }}</td>
                    <td>{{ ligasaison }}</td>
                    <td>
                    <a class="btn pull-right" href="{{ path('ligasaison_show', { 'id': ligasaison.id }) }}">
                            <i class="icon-arrow-right"></i>
                        </a>
                            </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
