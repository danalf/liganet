{% extends '::base.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Regionen</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Kürzel</th>
            <th>Beschreibung</th>
            <th>Tabelleninhalt</th>
            <th>Tabelle zweite Kopfzeile</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.namekurz }}</td>
            <td>{{ entity.description }}</td>
            <td style="background-color: {{ entity.farbeTabelleHintergrund }}; color: {{ entity.farbeTabelleSchrift }};">Beispiel</td>
            <td style="background-color: {{ entity.farbeTabelleZeile2Hintergrund }}; color: {{ entity.farbeTabelleZeile2Schrift }};">Beispiel</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('region_show', { 'id': entity.id }) }}"><i class="icon-hand-right"></i> show</a>
                    </li>
                    <li>
                        <a href="{{ path('region_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i> edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn" href="{{ path('region_new') }}">Region hinzufügen</a>

{% endblock %}