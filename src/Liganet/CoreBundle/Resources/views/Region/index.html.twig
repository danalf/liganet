{% extends '::base.html.twig' %}
{% block content %}

<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>Regionen</h1>
        </div>
    </div>
    <div class="span1">
        {% if is_granted('ROLE_UNION_MANAGEMENT') %}
        <a class="btn" href="{{ path('region_new', { 'verband_id': 0 }) }}">
            <i class="icon-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>KÃ¼rzel</th>
            <th>Beschreibung</th>
            <th>Tabelleninhalt</th>
            <th>Tabelle zweite Kopfzeile</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                    {% if entity.document %}
                            <img class="media-object" alt="Logo {{ entity }}" src="{{ asset(entity.document.webpath) }}" style="height: 64px" />
                    {% endif %}
                        </td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.namekurz }}</td>
            <td>{{ entity.description }}</td>
            <td style="background-color: {{ entity.farbeTabelleHintergrund }}; color: {{ entity.farbeTabelleSchrift }};">Beispiel</td>
            <td style="background-color: {{ entity.farbeTabelleZeile2Hintergrund }}; color: {{ entity.farbeTabelleZeile2Schrift }};">Beispiel</td>
            <td>
                <a class="btn" href="{{ path('region_show', { 'id': entity.id }) }}">
                    <i class="icon-arrow-right"></i>
                </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn" href="{{ path('region_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}