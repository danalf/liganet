{% extends '::base.html.twig' %}
{% block content %}
<h1>Region</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Name_kurz</th>
            <td>{{ entity.namekurz }}</td>
        </tr>
        <tr>
            <th>Verband</th>
            <td>{{ entity.verband.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Farbetabelleschrift</th>
            <td>{{ entity.farbeTabelleSchrift }}</td>
        </tr>
        <tr>
            <th>Farbetabellehintergrund</th>
            <td>{{ entity.farbeTabelleHintergrund }}</td>
        </tr>
        <tr>
            <th>Farbetabellezeile2schrift</th>
            <td>{{ entity.farbeTabelleZeile2Schrift }}</td>
        </tr>
        <tr>
            <th>Farbetabellezeile2hintergrund</th>
            <td>{{ entity.farbeTabelleZeile2Hintergrund }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('region') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('region_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('region_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
