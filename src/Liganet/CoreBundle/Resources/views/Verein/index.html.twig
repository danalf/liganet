<h1>Verein list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Namekurz</th>
            <th>Kuerzel</th>
            <th>Nummer</th>
            <th>Kontakt</th>
            <th>Homepage</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('verein_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.namekurz }}</td>
            <td>{{ entity.kuerzel }}</td>
            <td>{{ entity.nummer }}</td>
            <td>{{ entity.kontakt }}</td>
            <td>{{ entity.homepage }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('verein_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('verein_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('verein_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
