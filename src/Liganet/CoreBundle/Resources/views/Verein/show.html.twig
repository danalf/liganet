{% extends '::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            {% if entity.document %}
                <img alt="Logo {{ entity.namekurz }}" src="{{ asset(entity.document.webpath) }}" class="img-polaroid pull-left" style="height: 96px; margin-right: 5px"/> 
            {% endif %}
                <h1>{{ entity.namekurz }}</h1>
                <h1><small>{{ entity.name }}</small></h1>
            </div>
        </div>
        <div class="span1">
            <a class="btn" href="{{ path('verein') }}">
                <i class="fa fa-list"></i>
            </a>
            {% if isGrantedEdit == true %}
            <a class="btn" href="{{ path('verein_edit', { 'id': entity.id }) }}">
                <i class="fa fa-pencil"></i>
            </a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
            <form  action="{{ path('verein_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                    <button  class="btn"  type="submit"><i class="fa fa-trash"></i></button>
                </form>
            {% endif %}
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3">
                <h2>Details</h2>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>KÃ¼rzel</th>
                            <td>{{ entity.kuerzel }}</td>
                        </tr>
                        <tr>
                            <th>Nummer</th>
                            <td>{{ entity.nummer }}</td>
                        </tr>
                        <tr>
                            <th>Neu: Vereinsleitung</th>
                            <td>
                                {% for leiter in entity.leiter %}
                                    <a href="{{ path('spieler_show', { 'id': leiter.id }) }}">{{ leiter }}</a><br />
                                {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>Homepage</th>
                                <td><a href="{{ entity.homepage }}" target="_blank">{{ entity.homepage }}</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="span5">
                    {{ include('LiganetCoreBundle:Mannschaft:showList.html.twig', { 'verein': entity }) }}
                </div>
                <div class="span4">{{ render(controller("LiganetCoreBundle:Spieler:showList" , { 'id': entity.id })) }}</div>
            </div>
{% endblock %}
