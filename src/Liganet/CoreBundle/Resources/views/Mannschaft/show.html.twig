{% extends 'LiganetCoreBundle::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>{{ entity }} <small>{{ entity.verein}} </small></h1>
            <p>{{ entity.bemerkung }}</p>
            <p>KapitÃ¤n: {{ entity.captain }}</p>
        </div>
    </div>
    <div class="span1">
        <a class="btn" href="{{ path('mannschaft') }}">
            <i class="icon-list"></i>
        </a>
        {% if isGrantedEdit == true %}
        <a class="btn" href="{{ path('mannschaft_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <form  action="{{ path('mannschaft_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button  class="btn"  type="submit"><i class="icon-trash"></i></button>
            </form>
        {% endif %}
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <h2>Allgemein</h2>
            <table class="table">
                <tr>
                    <th>Liga</th>
                    <td>{{ entity.ligasaison }}</td>
                </tr>
                <tr>
                    <th>Spielplan</th>
                    <td><a class="btn pull-right" href="{{ path('mannschaft_pdf_spielplan', { 'id': entity.id }) }}"><i class=" icon-download-alt"></i></a> </td>
                </tr>
            </table>
        {% render "LiganetCoreBundle:MannschaftSpieler:showList" with { 'id': entity.id } %}
        </div>
        <div class="span6">
            <h2>Begegnungen</h2>
            <table class="table">
        {% for begegnung in entity.begegnungen1 %}
                    <tr>
                        <td>{{ begegnung.spielrunde.nummer }}</td>
                        <td>{{ begegnung.mannschaft1 }}</td>
                        <td>{{ begegnung.mannschaft2 }}</td>
                        <td>{{ begegnung.kugeln1 }} : {{ begegnung.kugeln2 }}</td>
                        <td>{{ begegnung.siege1 }} : {{ begegnung.siege2 }}</td>
                        <td>{{ begegnung.punkt1 }} : {{ begegnung.punkt2 }}</td>
                    </tr>
        {% endfor %}  
        {% for begegnung in entity.begegnungen2 %}
                    <tr>
                        <td>{{ begegnung.spielrunde.nummer }}</td>
                        <td>{{ begegnung.mannschaft1 }}</td>
                        <td>{{ begegnung.mannschaft2 }}</td>
                        <td>{{ begegnung.kugeln1 }} : {{ begegnung.kugeln2 }}</td>
                        <td>{{ begegnung.siege1 }} : {{ begegnung.siege2 }}</td>
                        <td>{{ begegnung.punkt1 }} : {{ begegnung.punkt2 }}</td>
                    </tr>
        {% endfor %}
                </table>
            </div>
        </div>

{% endblock %}