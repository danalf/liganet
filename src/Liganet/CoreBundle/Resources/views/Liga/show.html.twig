{% extends '::base.html.twig' %}
{% block content %}
<h1>Liga</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Tabellenkopf</th>
            <td style="background-color: {{ entity.farbeTabellenKopf }}; color: {{ entity.farbeTabellenKopfSchrift }};">Beispiel</td>
           
        </tr>
        <tr>
            <th>Ãœberschrift</th>
             <td style="background-color: {{ entity.farbeUeberschriftHintergrund }}; color: {{ entity.farbeUeberschrift }};">Beispiel</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Kuerzel</th>
            <td>{{ entity.kuerzel }}</td>
        </tr>
        <tr>
            <th>Bemerkung</th>
            <td>{{ entity.bemerkung }}</td>
        </tr>
        <tr>
            <th>Newsfeed</th>
            <td>{{ entity.newsfeed }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('liga') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('liga_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('liga_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
