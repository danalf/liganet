{% extends '::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>{{ entity.name }} <small>{{ entity.region }}</small></h1>
            <p><a href="{{ path('region_show', { 'id': entity.region.id }) }}">{{ entity.region.name }}</a></p>
            <p>{{ entity.bemerkung }}</p>
        </div>
    </div>
    <div class="span1">
        <a class="btn" href="{{ path('liga') }}">
            <i class="icon-list"></i>
        </a>
        {% if isGrantedEdit == true %}
        <a class="btn" href="{{ path('liga_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <form  action="{{ path('liga_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button  class="btn"  type="submit"><i class="icon-trash"></i></button>
        </form>
        {% endif %}
    </div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Tabellenkopf</th>
            <td style="background-color: {{ entity.farbeTabellenKopf }}; color: {{ entity.farbeTabellenKopfSchrift }};">Beispiel</td>

        </tr>
        <tr>
            <th>Ãœberschrift</th>
            <td style="background-color: {{ entity.farbeUeberschriftHintergrund }}; color: {{ entity.farbeUeberschrift }};">Beispiel</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Kuerzel</th>
            <td>{{ entity.kuerzel }}</td>
        </tr>
        <tr>
            <th>Newsfeed</th>
            <td>{{ entity.newsfeed }}</td>
        </tr>
    </tbody>
</table>

<h2>Mannschaften</h2>
<div class="row-fluid">
        {% for ligasaison in entity.ligasaison %}
        <div class="span2">
            <h3>Saison {{ligasaison.saison}}</h3>
        {% for mannschaft in ligasaison.mannschaften %}
            <p><a href="{{ path('mannschaft_show', { 'id': mannschaft.id }) }}">{{ mannschaft }}</a></p>
        {% endfor %}
            </div>
        {% endfor %}
        </div>
        
{% endblock %}
