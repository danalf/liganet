{% extends '::base.html.twig' %}
{% block content %}

<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>Mannschaftsspieler</h1>
        </div>
    </div>
    <div class="span1">
        {% if is_granted('ROLE_CAPTAIN') %}
        <a class="btn" href="{{ path('mannschaftspieler_new') }}">
            <i class="icon-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Bestaetigt</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.bestaetigt }}</td>
            <td>
                        <a class="btn" href="{{ path('mannschaftspieler_show', { 'id': entity.id }) }}">
                            <i class="icon-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn" href="{{ path('mannschaftspieler_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
