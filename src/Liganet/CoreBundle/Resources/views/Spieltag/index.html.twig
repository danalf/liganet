<h1>Spieltag list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nummer</th>
            <th>Datum</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('spieltag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nummer }}</td>
            <td>{% if entity.datum %}{{ entity.datum|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('spieltag_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('spieltag_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('spieltag_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
