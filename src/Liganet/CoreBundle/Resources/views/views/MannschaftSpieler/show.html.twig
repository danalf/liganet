{% extends '::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>{{ entity.spieler }} 
                    <small>{{ entity.status }}</small>
                </h1>
                <p><a href="{{ path('mannschaft_show', { 'id': entity.mannschaft.id }) }}">{{ entity.mannschaft }}</a></p>
                <p><a href="{{ path('spieler_show', { 'id': entity.spieler.id }) }}">Spielerinfos</a></p>
            </div>
        </div>
        <div class="span1">
            <a class="btn" href="{{ path('spieler') }}">
                <i class="icon-list"></i>
            </a>
        {% if isGrantedEdit == true %}
            <a class="btn" href="{{ path('spieler_edit', { 'id': entity.id }) }}">
                <i class="icon-pencil"></i>
            </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <form  action="{{ path('spieler_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                    <button  class="btn"  type="submit"><i class="icon-trash"></i></button>
                </form>
        {% endif %}
            </div>
        </div>

<table class="table">
    <tbody>
        <tr>
            <th>Liga</th>
            <td>{{ entity.mannschaft.ligasaison.liga }}</td>
        </tr>
        <tr>
            <th>Best√§tigt</th>
            <td>{% if entity.bestaetigt > 0 %}<i class="icon-ok"></i>{% endif %}</td>
        </tr>
    </tbody>
</table>

{% endblock %}
