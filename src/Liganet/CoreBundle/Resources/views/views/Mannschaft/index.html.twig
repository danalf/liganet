{% extends '::base.html.twig' %}
{% block content %}

<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>Vereine</h1>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Rang</th>
            <th>Bemerkung</th>
            <th>Kapit√§n</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity }}</td>
            <td>{{ entity.bemerkung }}</td>
            <td>{{ entity.captain }}</td>
            <td>
                        <a class="btn" href="{{ path('mannschaft_show', { 'id': entity.id }) }}">
