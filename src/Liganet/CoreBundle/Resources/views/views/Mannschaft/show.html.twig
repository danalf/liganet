{% extends '::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>{{ entity }} <small>{{ entity.verein}} </small></h1>
            <p>{{ entity.bemerkung }}</p>
            <p>Kapit√§n: {{ entity.captain }}</p>
        </div>
    </div>
    <div class="span1">
        <a class="btn" href="{{ path('mannschaft') }}">
            <i class="icon-list"></i>
        </a>
        {% if isGrantedEdit == true %}
        <a class="btn" href="{{ path('mannschaft_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <form  action="{{ path('mannschaft_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button  class="btn"  type="submit"><i class="icon-trash"></i></button>
        </form>
        {% endif %}
    </div>
</div>
{% render "LiganetCoreBundle:MannschaftSpieler:showList" with { 'id': entity.id } %}

{% endblock %}