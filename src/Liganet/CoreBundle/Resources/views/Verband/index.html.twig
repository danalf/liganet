{% extends 'LiganetCoreBundle::base.html.twig' %}
{% block content %}

<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>Verbände</h1>
        </div>
    </div>
    <div class="span1">
        {% if is_granted('ROLE_UNION_MANAGEMENT') %}
        <a class="btn" href="{{ path('verband_new') }}">
            <i class="icon-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Kürzel</th>
            <th>Verbandsnummer</th>
            <th>Website</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                    {% if entity.document %}
                            <img class="media-object pull-left" alt="Logo {{ entity }}" src="{{ asset(entity.document.webpath) }}" style="height: 64px" />
                    {% endif %}
                        </td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.namekurz }}</td>
            <td>{{ entity.number }}</td>
            <td>{{ entity.website }}</td>
            <td>
                        <a class="btn" href="{{ path('verband_show', { 'id': entity.id }) }}">
                            <i class="icon-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn" href="{{ path('verband_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
