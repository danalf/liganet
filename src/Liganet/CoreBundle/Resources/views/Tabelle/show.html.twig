<h2>Tabelle</h2>
<table class="table ergebnis">
    <tr>
        <td colspan="6" class="table-zeile1">Tabelle Runde {{entities[0].spielrunde.spieltag.nummer}} am {{ entities[0].spielrunde.spieltag.datum|date("d.m.Y") }}</td>
    </tr>
    <tr class="table-zeile2">
        <td>Platz</td>
        <td>Mannschaft</td>
        <td>Kugeln</td>
        <td>Differenz</td>
        <td>Spiele</td>
        <td>Punkte</td>
    </tr>
    <tbody class="table-content">
        {% for zeile in entities %}
            <tr>
                <td>{{ zeile.rang }}</td>
                <td>{{ zeile.mannschaft.namekurz }}</td>
                <td>{{ zeile.kugeln1 }} : {{ zeile.kugeln2 }}</td>
                <td>{{ zeile.differenz }}</td>
                <td>{{ zeile.spiele1 }} : {{ zeile.spiele2 }}</td>
                <td>{{ zeile.punkte1 }} : {{ zeile.punkte2 }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
