{% extends '::base.html.twig' %}
{% block content %}
<h1>SpielRunde list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nummer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('spielrunde_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nummer }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('spielrunde_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('spielrunde_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('spielrunde_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
