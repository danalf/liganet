{% extends '::base.html.twig' %}
{% block content %}

<div class="row">
    <div class="col-md-11">
        <div class="page-header">
            <h1>Spielrunden</h1>
        </div>
    </div>
    <div class="col-md-1">
 
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nummer</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('spielrunde_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nummer }}</td>
            <td>
                        <a class="btn btn-default" href="{{ path('spielrunde_show', { 'id': entity.id }) }}">
                            <i class="fa fa-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn btn-default" href="{{ path('spielrunde_edit', { 'id': entity.id }) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
