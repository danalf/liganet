<h1>Anrede list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Anrede</th>
            <th>Brief</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('anrede_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.anrede }}</td>
            <td>{{ entity.brief }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('anrede_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

