{% extends '::base.html.twig' %}
{% block content %}
<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>{{ entity.name }}</h1>
        </div>
    </div>
    <div class="span1">
        <a class="btn" href="{{ path('spielerstatus') }}">
            <i class="icon-list"></i>
        </a>
        {% if isGrantedEdit == true %}
        <a class="btn" href="{{ path('spielerstatus_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <form  action="{{ path('spielerstatus_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button  class="btn"  type="submit"><i class="icon-trash"></i></button>
        </form>
        {% endif %}
    </div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Kurz</th>
            <td>{{ entity.kurz }}</td>
        </tr>
    </tbody>
</table>

{% endblock %}