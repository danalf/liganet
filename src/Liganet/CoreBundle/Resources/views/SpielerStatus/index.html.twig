{% extends 'LiganetCoreBundle::base.html.twig' %}
{% block content %}

<div class="row-fluid">
    <div class="span11">
        <div class="page-header">
            <h1>Spielerstatus</h1>
        </div>
    </div>
    <div class="span1">
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn" href="{{ path('spielerstatus_new') }}">
            <i class="icon-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Kurz</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.kurz }}</td>
                <td>
                        <a class="btn" href="{{ path('spielerstatus_show', { 'id': entity.id }) }}">
                            <i class="icon-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn" href="{{ path('spielerstatus_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

{% endblock %}