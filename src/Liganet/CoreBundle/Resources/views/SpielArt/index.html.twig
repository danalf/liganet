{% extends '::base.html.twig' %}
{% block content %}
<h1>SpielArt list</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Namekurz</th>
            <th>Anzahlspieler</th>
            <th>Mixte</th>
            <th>Nummer</th>
            <th>Reihenfolge</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('spielart_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.nameKurz }}</td>
            <td>{{ entity.anzahlSpieler }}</td>
            <td>{{ entity.mixte }}</td>
            <td>{{ entity.nummer }}</td>
            <td>{{ entity.reihenfolge }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('spielart_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('spielart_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('spielart_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
