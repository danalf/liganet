{% extends '::base.html.twig' %}
{% block content %}

<div class="row">
    <div class="col-md-11">
        <div class="page-header">
            <h1>Spielarten</h1>
        </div>
    </div>
    <div class="col-md-1">
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-default" href="{{ path('spielart_new') }}">
            <i class="fa fa-plus"></i>
        </a>
        {% endif %}    
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Namekurz</th>
            <th>Anzahlspieler</th>
            <th>Mixte</th>
            <th>Nummer</th>
            <th>Reihenfolge</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.nameKurz }}</td>
            <td>{{ entity.anzahlSpieler }}</td>
            <td>{{ entity.mixte }}</td>
            <td>{{ entity.nummer }}</td>
            <td>{{ entity.reihenfolge }}</td>
            <td>
                        <a class="btn btn-default" href="{{ path('spielart_show', { 'id': entity.id }) }}">
                            <i class="fa fa-arrow-right"></i>
                        </a>
                        {% if isGrantedEdit == true %}
                        <a class="btn btn-default" href="{{ path('spielart_edit', { 'id': entity.id }) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                        {% endif %}
                    </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
