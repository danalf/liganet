{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-11">
        <div class="page-header">
            <h1>{{ spielerStatus.name }}</h1>
        </div>
    </div>
    <div class="col-md-1">
        <a class="btn btn-default" href="{{ path('spielerstatus_index') }}">
            <i class="fa fa-list"></i>
        </a>
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-default" href="{{ path('spielerstatus_edit', { 'id': spielerStatus.id }) }}">
            <i class="fa fa-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <form  action="{{ path('spielerstatus_delete', { 'id': spielerStatus.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button  class="btn btn-default"  type="submit"><i class="fa fa-trash"></i></button>
        </form>
        {% endif %}
    </div>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ spielerStatus.name }}</td>
        </tr>
        <tr>
            <th>Kurz</th>
            <td>{{ spielerStatus.kurz }}</td>
        </tr>
    </tbody>
</table>

{% endblock %}
