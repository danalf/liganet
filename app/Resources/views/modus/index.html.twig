{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-11">
            <div class="page-header">
                <h1>Modus</h1>
            </div>
        </div>
        <div class="col-md-1">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-default" href="{{ path('modus_new') }}">
                    <i class="fa fa-plus"></i>
                </a>
            {% endif %}    
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Anzahlrunden</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            {% for modus in moduses %}
                <tr>
                    <td>{{ modus.name }}</td>
                    <td>{{ modus.anzahlRunden }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('modus_show', { 'id': modus.id }) }}">
                            <i class="fa fa-arrow-right"></i>
                        </a>
                        {% if is_granted("ROLE_ADMIN") %}
                            <a class="btn btn-default" href="{{ path('modus_edit', { 'id': modus.id }) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
