<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        {% stylesheets '@LiganetCoreBundle/Resources/public/css/main.css'
                        'bundles/liganetcore/css/*'
                         filter='cssrewrite' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="{{ path('_home') }}"><strong>Liganet</strong></a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Stammdaten
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('verband') }}">Verbände</a></li>
                                    <li><a href="{{ path('region') }}">Regionen</a></li>
                                    <li><a href="{{ path('liga') }}">Ligen</a></li>
                                    <li><a href="{{ path('verein') }}">Vereine</a></li>
                                    <li><a href="{{ path('spieler') }}">Spieler</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Ligaeinstellungen
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('saison') }}">Saison</a></li>
                                    <li><a href="{{ path('ligasaison') }}">Zuordnung Liga und Saison</a></li>
                                    <li><a href="{{ path('mannschaft') }}">Mannschaften</a></li>
                                    <li><a href="{{ path('mannschaftspieler') }}">Zurodnung Mannschaften und Spieler</a></li>
                                    <li><a href="{{ path('spieltag') }}">Spieltage</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Administration
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('anrede') }}">Anrede</a></li>
                                    <li><a href="{{ path('spielerstatus') }}">Status der Mannschaftsspieler</a></li>
                                    <li><a href="{{ path('modus') }}">Modus</a></li>
                                    <li><a href="{{ path('modusrunden') }}">Runden bei Modus</a></li>
                                    <li><a href="{{ path('document') }}">Dokumente</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav pull-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                {% render "LiganetCoreBundle:Spieler:showInMenu" %}
                                <li class="divider-vertical"></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                            {% else %}
                                    <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            {% endif %}
                                    </ul>
                                </div><!--/.nav-collapse -->
                            </div>
                        </div>
                    </div>

                    <div class="container">
                     {% if app.session.hasFlash('error') %}
                            <div class="alert alert-error" ><button type="button" class="close" data-dismiss="alert">×</button>{{ app.session.flash('error') }}</div>
                    {% endif %}
                    {% if app.session.hasFlash('notice') %}
                            <div class="alert" ><button type="button" class="close" data-dismiss="alert">×</button>{{ app.session.flash('notice') }}</div>
                    {% endif %}
                    {% if app.session.hasFlash('success') %}
                            <div class="alert alert-success" ><button type="button" class="close" data-dismiss="alert">×</button>{{ app.session.flash('success') }}</div>
                    {% endif %}

                    {% block content_head %}{% endblock %}
                            <div>{% block content %}{% endblock %}</div>
                    {% block body %}{% endblock %}
                            <div>{% block fos_user_content %}{% endblock fos_user_content %}</div>
                        </div> <!-- /container -->
                        <footer>
                            <p>&copy; Alfredo 2012</p>
                        </footer>
                {% javascripts
                    'bundles/liganetcore/js/vendor/modernizr-2.6.1-respond-1.1.0.min.js'
                    'bundles/liganetcore/js/vendor/jquery-1.8.2.min.js' 
                    'bundles/liganetcore/js/vendor/bootstrap.min.js'
                    '@LiganetCoreBundle/Resources/public/js/main.js'%}
                        <script src="{{ asset_url }}"></script>
                {% endjavascripts %}
                    </body>
                </html>
