<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
{% stylesheets '@LiganetCoreBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
 {% endstylesheets %}

        <script src="js/vendor/modernizr-2.6.1-respond-1.1.0.min.js"></script>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('_home') }}"><strong>Liganet</strong></a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="{{ path('_home') }}">Home</a></li>
                            <li><a href="{{ path('verband') }}">Verband</a></li>
                            <li><a href="#contact">Contact</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li class="nav-header">Nav header</li>
                                    <li><a href="#">Separated link</a></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form pull-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <p>Hallo {{ app.user.username }}</p>
                                <a href="{{ path('fos_user_security_logout') }}">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                            {% else %}
                                    <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            {% endif %}
                                </form>
                            </div><!--/.nav-collapse -->
                        </div>
                    </div>
                </div>
                    {% block body %}{% endblock %}
                <div class="container">

                    <!-- Main hero unit for a primary marketing message or call to action -->
                    <div class="hero-unit">{% block content_head %}{% endblock %}</div>
                    <div>{% block content %}{% endblock %}</div>
                    <div>{% block fos_user_content %}{% endblock fos_user_content %}</div>

                    <hr>
                    <footer>
                        <p>&copy; Company 2012</p>
                    </footer>
                </div> <!-- /container -->
        {% javascripts
    '@LiganetCoreBundle/Resources/public/js/*'
    '@LiganetCoreBundle/Resources/public/js/vendor/*' %}
                <script src="{{ asset_url }}"></script>
{% endjavascripts %}
            </body>
        </html>
