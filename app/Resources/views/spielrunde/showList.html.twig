{% if is_granted('edit', spieltag) %}
    <a class="btn btn-default pull-right" href="{{ path('spielrunde_new', { 'spieltag_id': spieltag.id }) }}">
        <i class="fa fa-plus"></i>
    </a>
{% endif %}  
<h2>Runden</h2>
<table class="table">
    {% for spielrunde in spieltag.runden %}
        <tr>
            <td>{{ spielrunde.nummer }}</td>
            <td>
                <a class="btn btn-default pull-right" href="{{ path('spielrunde_show', { 'id': spielrunde.id }) }}">
                    <i class="fa fa-arrow-right"></i>
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
