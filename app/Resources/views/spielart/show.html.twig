{% extends 'base.html.twig' %}

{% block content %}
    <h1>SpielArt</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spielArt.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spielArt.name }}</td>
            </tr>
            <tr>
                <th>Namekurz</th>
                <td>{{ spielArt.nameKurz }}</td>
            </tr>
            <tr>
                <th>Anzahlspieler</th>
                <td>{{ spielArt.anzahlSpieler }}</td>
            </tr>
            <tr>
                <th>Mixte</th>
                <td>{% if spielArt.mixte %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Nummer</th>
                <td>{{ spielArt.nummer }}</td>
            </tr>
            <tr>
                <th>Reihenfolge</th>
                <td>{{ spielArt.reihenfolge }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('spielart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('spielart_edit', { 'id': spielArt.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
