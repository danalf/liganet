{% extends 'base.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-md-11">
        <div class="page-header">
            <h1>{{ mannschaftSpieler.spieler }} 
                <small>{{ mannschaftSpieler.status }}</small>
            </h1>
            <p>
                <a href="{{ path('mannschaft_show', { 'id': mannschaftSpieler.mannschaft.id }) }}">{{ mannschaftSpieler.mannschaft }}</a>
            </p>
        </div>
    </div>
    <div class="col-md-1">
        {% if is_granted('edit', mannschaftSpieler.mannschaft) %}
        <a class="btn btn-default" href="{{ path('mannschaftspieler_edit', { 'id': mannschaftSpieler.id }) }}">
            <i class="fa fa-pencil"></i>
        </a>
        {% endif %}
        {% if is_granted('ROLE_REGION_MANAGEMENT') %}
        <form  action="{{ path('mannschaftspieler_delete', { 'id': mannschaftSpieler.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button  class="btn btn-default"  type="submit"><i class="fa fa-trash"></i></button>
            </form>
        {% endif %}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Spielerinfos</th>
                <td><a href="{{ path('spieler_show', { 'id': mannschaftSpieler.spieler.id }) }}">Spielerinfos</a></td>
            </tr>
            <tr>
                <th>Liga</th>
                <td><a href="{{ path('liga_show', { 'id': mannschaftSpieler.mannschaft.ligasaison.liga.id }) }}">{{ mannschaftSpieler.mannschaft.ligasaison.liga }}</a></td>
            </tr>
            <tr>
                <th>Best√§tigt</th>
                <td>{% if mannschaftSpieler.bestaetigt > 0 %}<i class="fa fa-check"></i>{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
